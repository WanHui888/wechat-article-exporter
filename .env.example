# App
NODE_ENV=development

# Database (MySQL) - REQUIRED
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=CHANGE_ME_TO_YOUR_DATABASE_PASSWORD
DB_NAME=wechat_exporter

# JWT (REQUIRED)
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=7d

# MeiliSearch (optional, for full-text search)
MEILI_HOST=http://localhost:7700
MEILI_KEY=

# Data storage
DATA_DIR=./data
BACKUP_DIR=./data/backups

# First admin user (created on startup if not exists)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
